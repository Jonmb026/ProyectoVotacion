<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Proyecto de Votación</title>
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />
</head>
<body>
    <div class="layout-wrapper">
        <header>
            <div class="logo">
                <a href="@Url.Action("Index", "Home")">
                    <img src="~/images/logo.png" alt="Logo" />
                </a>
            </div>
            <nav class="nav-bar">
                <ul class="nav-list">
                    <li><a href="@Url.Action("Index", "Home")">Inicio</a></li>
                    <li><a href="@Url.Action("Index", "Admin")">Candidatos</a></li>
                    <li><a href="@Url.Action("ManageUsers", "Admin")">Usuarios</a></li>
                    <li><a href="@Url.Action("Votar", "Votante")">Votación</a></li>
                    <li><a href="@Url.Action("Resultado", "Admin")">Resultado</a></li>
                    <li>
                        <form asp-action="Logout" asp-controller="Auth" method="post">
                            <button type="submit" class="btn-logout">Cerrar Sesión</button>
                        </form>
                    </li>
                </ul>
            </nav>
        </header>

        <div class="content-wrapper">
            <main>
                @RenderBody()
            </main>
        </div>

        <footer>
            <p>&copy; @DateTime.Now.Year - Proyecto de Votación. Todos los derechos reservados.</p>
        </footer>
    </div>

    @RenderSection("Scripts", required: false)
</body>
</html>
