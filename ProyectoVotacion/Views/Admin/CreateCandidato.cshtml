@model ProyectoVotacion.Models.Candidato

@{
    ViewData["Title"] = "Crear Candidato";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="CreateCandidato" method="post">
    <div class="form-group">
        <label for="Nombre">Nombre</label>
        <input type="text" class="form-control" id="Nombre" name="Nombre" required />
    </div>
    <div class="form-group">
        <label for="PrimerApellido">Primer Apellido</label>
        <input type="text" class="form-control" id="PrimerApellido" name="PrimerApellido" required />
    </div>
    <div class="form-group">
        <label for="SegundoApellido">Segundo Apellido</label>
        <input type="text" class="form-control" id="SegundoApellido" name="SegundoApellido" />
    </div>
    <div class="form-group">
        <label for="Cedula">Cédula</label>
        <input type="text" class="form-control" id="Cedula" name="Cedula" required />
    </div>
    <div class="form-group">
        <label for="Cargo">Cargo</label>
        <select class="form-control" id="Cargo" name="Cargo" required>
            @foreach (var cargo in ViewBag.Cargos)
            {
                <option value="@cargo">@cargo</option>
            }
        </select>
    </div>
    <div class="form-group">
        <label for="Provincia">Provincia</label>
        <select class="form-control" id="Provincia" name="Provincia" required>
            @foreach (var provincia in ViewBag.Provincias)
            {
                <option value="@provincia">@provincia</option>
            }
        </select>
    </div>
    <div class="form-group">
        <label for="Partido">Partido</label>
        <input type="text" class="form-control" id="Partido" name="Partido" required />
    </div>
    <div class="form-group">
        <label for="Eslogan">Eslogan</label>
        <textarea class="form-control" id="Eslogan" name="Eslogan"></textarea>
    </div>
    <button type="submit" class="btn btn-success">Guardar</button>
</form>
